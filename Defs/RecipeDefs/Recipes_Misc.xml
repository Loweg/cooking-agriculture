<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<RecipeDef>
		<defName>CA_MakeSaltFromChunk</defName>
		<label>make salt from rock salt</label>
		<description>Smash a chunk of rock salt into table salt for cooking.</description>
		<jobString>Making salt from rock salt.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CA_ChunkSalt</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<products>
			<CA_Salt>10</CA_Salt>
		</products>
		<recipeUsers>
			<li>TableStonecutter</li>
		</recipeUsers>
	</RecipeDef>
	<RecipeDef>
		<defName>CA_MakeMillstone</defName>
		<label>make millstone</label>
		<description>Grind and cut a millstone from a large rock.</description>
		<jobString>Making millstone</jobString>
		<workAmount>1200</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>TableStonecutter</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>StoneChunks</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<CA_Millstone>1</CA_Millstone>
		</products>
	</RecipeDef>
</Defs>