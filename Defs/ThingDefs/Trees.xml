<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef Abstract="True" Name="CA_TreeFruitBase" ParentName="TreeBase">
		<graphicData>
			<shadowData>
				<volume>(0.15, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>2</Beauty>
			<BeautyOutdoors>2</BeautyOutdoors>
			<Nutrition>1.25</Nutrition>
		</statBases>
		<ingestible />
		<plant>
			<dieIfLeafless>false</dieIfLeafless>
			<growDays>32.51</growDays>
			<visualSizeRange>0.8~2.0</visualSizeRange>
			<fertilityMin>0.7</fertilityMin>
			<topWindExposure>0.15</topWindExposure>
			<mustBeWildToSow>true</mustBeWildToSow>
			<harvestWork>800</harvestWork>
			<harvestYield>50</harvestYield>
			<harvestFailable>true</harvestFailable>
			<harvestAfterGrowth>0.20</harvestAfterGrowth>
		</plant>
	</ThingDef>

	<ThingDef ParentName="CA_TreeFruitBase">
		<defName>CA_AppleTree</defName>
		<label>apple tree</label>
		<description>A tree that yields apples.</description>
		<graphicData>
			<texPath>Trees/Apple</texPath>
		</graphicData>
		<plant>
			<immatureGraphicPath>Trees/Apple/Immature</immatureGraphicPath>
			<leaflessGraphicPath>Trees/Apple/Leafless</leaflessGraphicPath>
			<harvestedThingDef>CA_Apples</harvestedThingDef>
		</plant>
	</ThingDef>

	<ThingDef ParentName="CA_TreeFruitBase">
		<defName>CA_BananaTree</defName>
		<label>banana tree</label>
		<description>A tropical tree with a tall, naked trunk topped by a cluster of very broad leaves. This variety produces bananas.</description>
		<graphicData>
			<texPath>Trees/Banana</texPath>
		</graphicData>
		<plant>
			<immatureGraphicPath>Trees/Banana/Immature</immatureGraphicPath>
			<leaflessGraphicPath>Trees/Banana/Leafless</leaflessGraphicPath>
			<harvestedThingDef>CA_Bananas</harvestedThingDef>
			<topWindExposure>0.05</topWindExposure>
			<harvestWork>150</harvestWork>
		</plant>
	</ThingDef>

	<ThingDef ParentName="CA_TreeFruitBase">
		<defName>CA_CherryTree</defName>
		<label>cherry tree</label>
		<description>A cold-tolerant tree that yields cherries. This variety is quite beautiful when it blossoms in the winter.</description>
		<thingClass>CookingAgriculture.Plant_WinterFlowering</thingClass>
		<graphicData>
			<texPath>Trees/Cherry</texPath>
		</graphicData>
		<statBases>
			<Beauty>5</Beauty>
			<BeautyOutdoors>5</BeautyOutdoors>
		</statBases>
		<plant>
			<immatureGraphicPath>Trees/Cherry/Immature</immatureGraphicPath>
			<leaflessGraphicPath>Trees/Cherry/Leafless</leaflessGraphicPath>
			<harvestedThingDef>CA_Cherries</harvestedThingDef>
		</plant>
	</ThingDef>

	<ThingDef ParentName="CA_TreeFruitBase">
		<defName>CA_DateTree</defName>
		<label>date tree</label>
		<description>A tropical tree with a tall, naked trunk topped by a cluster of very broad leaves. This variety produces dates.</description>
		<graphicData>
			<texPath>Trees/Date</texPath>
		</graphicData>
		<plant>
			<immatureGraphicPath>Trees/Date/Immature</immatureGraphicPath>
			<leaflessGraphicPath>Trees/Date/Leafless</leaflessGraphicPath>
			<harvestedThingDef>CA_Dates</harvestedThingDef>
			<topWindExposure>0.05</topWindExposure>
			<harvestWork>150</harvestWork>
		</plant>
	</ThingDef>

	<ThingDef ParentName="CA_TreeFruitBase">
		<defName>CA_MulberryTree</defName>
		<label>mulberry tree</label>
		<description>A tree that yields delicious berries that can be eaten raw.</description>
		<graphicData>
			<texPath>Trees/Mulberry</texPath>
		</graphicData>
		<plant>
			<immatureGraphicPath>Trees/Mulberry/Immature</immatureGraphicPath>
			<leaflessGraphicPath>Trees/Mulberry/Leafless</leaflessGraphicPath>
			<harvestedThingDef>RawBerries</harvestedThingDef>
		</plant>
	</ThingDef>
</Defs>
